#include <iostream>
using namespace std;

int Sum(int a, int b){
return a+b;
}

int Difference(int a, int b){
return a-b;
}

int Division(int a, int b){
return a/b;
}

int Product(int a, int b){
return a*b;
}

int Remainer(int a, int b){
return a%b;
}

int main() {
  int x;
  int y;
  std::cout << "Enter an integer: ";
  std::cin >> x;
  std::cout << std::endl;
  std::cout << "Enter another integer: ";
  std::cin  >> y;
  std::cout << std::endl;
  std::cout << "The sum of the numbers is: " << Sum(x,y) << std::endl;
  std::cout << "The difference of the numbers is: " << Difference(x,y) << std::endl;
  std::cout << "The product of the numbers is: " << Product(x,y) << std::endl;
  std::cout << "The integer division is: " << Division(x,y) << std:: endl;
  std::cout << "The remainer of the division is: " << Remainer(x,y) << std::endl;
}
